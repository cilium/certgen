{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':configMigration',
    ':dependencyDashboard',
    ':gitSignOff',
    ':pinDependencies',
    ':prHourlyLimit4',
    ':prConcurrentLimit10',
    'helpers:pinGitHubActionDigests',
  ],
  baseBranchPatterns: [
    'main',
  ],
  keepUpdatedLabel: 'renovate/keep-updated',
  labels: [
    'dependencies',
    'renovate/stop-updating',
  ],
  postUpdateOptions: [
    'gomodTidy',
  ],
  schedule: [
    'before 6am on monday',
  ],
  separateMajorMinor: false,
  stopUpdatingLabel: 'renovate/stop-updating',
  vulnerabilityAlerts: {
    enabled: true,
    schedule: [
      'at any time',
    ],
    labels: [
      'kind/security',
      'release-blocker',
      'security',
    ],
  },

  packageRules: [
    {
      groupName: 'all Dockerfile dependencies',
      groupSlug: 'all-dockerfile-deps',
      matchFileNames: [
        'Dockerfile',
      ],
    },
    {
      groupName: 'all github action dependencies',
      groupSlug: 'all-github-action',
      matchFileNames: [
        '.github/workflows/**',
      ],
    },
    {
      groupName: 'all Go dependencies',
      groupSlug: 'all-go-deps',
      matchFileNames: [
        'go.mod',
        'go.sum',
      ],
      postUpdateOptions: [
        'gomodUpdateImportPaths'
      ],
    },
    {
      groupName: 'all Go version updates',
      groupSlug: 'all-go-updates',
      matchDepNames: [
        'docker.io/library/golang',
        'library/golang',
        'go',
        'golang',
      ],
    },
  ],
}
